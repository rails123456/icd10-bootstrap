<h1>/Block</h1>

<p>
  <b>Chapter</b><br>
  <%= @block.chapter_id %>
</p>

<p>
  <b>Block no</b><br>
  <%= @block.block_no %>
</p>

<p>
  <b>Block title</b><br>
  <%= @block.block_title %>
</p>

<div class="form-actions">
  <%= link_to 'Back', blocks_path, :class => 'btn'  %>
  <%= link_to 'Edit', edit_block_path(@block), :class => 'btn' %>
  <%= link_to 'Delete', block_path(@block), :method => 'delete', :confirm => 'Are you sure?', :class => 'btn btn-danger' %>
</div>
