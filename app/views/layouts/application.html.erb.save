<!DOCTYPE html>
<html>
<head>
  <title>Icd10forum</title>
  <!--[if lt IE 9]>
    <script src="http://html5shim.googlecode/svn/trunk/html5.js" type="text/javascript"></script>
  <![endif]-->
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
</head>
<body>
<div class="navbar navbar-fixed-top">
  <div class="navbar-inner">
    <div class="container">
      <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </a>
      <a class="brand" href="#">ICD10Forum</a>
      <div class="nav-collapse">
        <ul class="nav">
          <% if current_user %>
            <% if admin? %>
              <li class="divider-vertical"></li>
              <li><%= link_to "สมาชิก", users_path %></li>
            <% end %>
            <li class="divider-vertical"></li>
            <li><%= link_to "Q&A", qandas_path %></li>
          <% end %>
          <li class="divider-vertical"></li>
          <li><%= link_to "FAQs", faqs_path %></li>
          <% if current_user && !admin? %>
            <li class="divider-vertical"></li>
            <li class="dropdown">
              <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                ICD10 Codes
                <b class="caret"></b>
              </a>
              <ul class="dropdown-menu">
                <li><%= link_to "Chapters", chapters_path %></li>
                <li><%= link_to "Blocks", blocks_path %></li>
                <li><%= link_to "Codes", codes_path %></li>
              </ul>
            </li>
          <% end %>
          <li class="divider-vertical"></li>
          <form class="navbar-search" id="search">
            <input type="text" id="q" class="search-query span3"
             placeholder="Search" values="<%= params[:q] %>">
          </form>
        </ul>
        <ul class="nav pull-right">
          <% if current_user %>
            <% if admin? %>
              <li class="admin">
            <% else %>
              <li class="member">
            <% end %>
              <%= link_to "#{current_user.fullname}", "#" %>
            </li>
            <!-- li class="divider-vertical"></li //-->
            <li><%= link_to "Logout", logout_path %></li>
          <% else %>
            <li class="divider-vertical"></li>
            <li><%= link_to "Register", signup_path %></li>
            <li class="divider-vertical"></li>
            <li><%= link_to "Login", login_path %></li>
          <% end %>
        </ul>
      </div>
    </div>
  </div>
</div>

<div class="container">
  <% flash.each do |name, msg| %>
    <div class="alert alert-<%= name == :notice ? 'success' : 'error' %>">
      <a class="close" data-dismiss="alert">&otimes;</a>
      <%= msg %>
    </div>
  <% end %>
  <div class="row">
    <div class="span9">
      <%= yield %>
    </div>
    <div class="span3">
      <script type="text/javascript" src="http://jg.revolvermaps.com/r.js"></script><script type="text/javascript">rm_f1st('8','200','true','false','000000','6ll3l29icx4','true','ff0000');</script><noscript><applet codebase="http://rg.revolvermaps.com/j" code="core.RE" width="200" height="200" archive="g.jar"><param name="cabbase" value="g.cab" /><param name="r" value="true" /><param name="n" value="false" /><param name="i" value="6ll3l29icx4" /><param name="m" value="8" /><param name="s" value="200" /><param name="c" value="ff0000" /><param name="v" value="true" /><param name="b" value="000000" /><param name="rfc" value="true" /></applet></noscript>
    </div>
  </div>
</div>
</body>
</html>
