<%= form_for @faq, :html => { :class => 'form-horizontal' } do |f| %>
  <fieldset>
    <legend><%= controller.action_name.capitalize %> /Faq</legend>

    <div class="control-group">
      <%= f.label :faq_item, :class => 'control-label' %>
      <div class="controls">
        <%= f.text_field :faq_item, :class => 'text_field' %>
      </div>
    </div>

    <div class="control-group">
      <%= f.label :faq_q, :class => 'control-label' %>
      <div class="controls">
        <%= f.text_field :faq_q, :class => 'text_field' %>
      </div>
    </div>

    <div class="control-group">
      <%= f.label :faq_a, :class => 'control-label' %>
      <div class="controls">
        <%= f.text_field :faq_a, :class => 'text_field' %>
      </div>
    </div>

    <div class="form-actions">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to 'Cancel', faqs_path, :class => 'btn' %>
    </div>
  </fieldset>
<% end %>
