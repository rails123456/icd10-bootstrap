<%= simple_form_for @qanda, :html => { :class => 'form-horizontal' } do |f| %>
  <fieldset>
    <legend><%= controller.action_name.capitalize %> &gt; Q&A</legend>

    <% if member? %>
      <% owner_id = current_user.id %>
      <% owner_email = current_user.email %>
    <% else %>
      <% owner_id = @qanda.user_id %>
      <% owner_email = @qanda.user.email %>
    <% end %>

    <%= f.hidden_field :user_id,
                       :value => owner_id
    %>
    <%= f.input "test", 
                :label => "Email",
                :input_html => {:value => owner_email},
                :disabled => true
    %>
    <%= f.input :qa_q,
                :label => "คำถาม",
                :as => :text,
                :input_html => { :rows => 5, :style => "width:500px" }
     %>
     <% if admin? or consultant? %>
       <%= f.input :qa_a,
                :label => "คำตอบ",
                :as => :text,
                :input_html => { :rows => 5, :style => "width:500px" }
       %>
       <%= f.input :qa_status,
                   :as => :select,
                   :collection => ['unassigned','consulting', 'answered'],
                   :label => "สถานะ"
       %>
       <%= f.input :qa_consultant,
                   :label => "ปรึกษาผู้เชี่ยวชาญ",
                   :collection => User.where(:role => "consultant"),
                   :label_method => lambda { |u| u.fullname }
       %>
    <% else %>
      <%= f.input :qa_status,
                  :as => :hidden,
                  :input_html => { :value => 'unassigned' }
      %>
    <% end %>

    <div class="form-actions">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to 'Cancel', qandas_path, :class => 'btn' %>
    </div>
    <div class='alert alert-info'>ระบบจะทำการแจ้งเตือน SMS ไปยังผู้เชี่ยวชาญ กรณีเลือก consulting</div>
  </fieldset>
<% end %>
